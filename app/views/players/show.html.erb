<body id="player_show">

<ul>
  <li><a href="/battles">Main Menu</a></li>
  <li><a href="/players">Go Back</a></li>
</ul>

<h2>Player: <%= @player.name%></h2>
<h2>Health: <%= @player.health%></h2>
<br>
    <h4>Attack Slots</h4>


<%  @attack_slots.each do |player_attack| %>
    <div>
        <p>
            <%= player_attack.name%>
            <br>
            Attack type: <%= player_attack.attack_type%>
            <br>
            Target: <%= player_attack.target%>
            <br>
            <br>
        </p>
    </div>
<%end%>



<%= button_to "Edit", edit_player_path(@player), method: "get"%>
<%= button_to "Delete", player_path(@player), method: "delete"%>