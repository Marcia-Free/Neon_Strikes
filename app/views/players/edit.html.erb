
<h1>Player Editor</h1>

<%if @player.errors.any? %>
<h4 style="color: #5DADE2">Errors</h4>

    <% @player.errors.full_messages.each do |message| %>
    <li> <%=message%> </li> 
    <% end %>
<% end %>
<br>

<%= form_for(@player) do |f| %>
    <%= f.label :Name %>
    <br>

    <%= f.text_field :name %>
    <br>
        <%  @attack_slots.each do |player_attack| %>
    <ul>
        <li>
            <%= player_attack.name%>
            <br>
            Attack type: <%= player_attack.attack_type%>
            <br>
            Target: <%= player_attack.target%>
            <br>
        </li>
    </ul>
        <%end%>
    <%= f.submit%>
    <% end %>

    <br>
    <%= link_to "Go Back", players_path %>