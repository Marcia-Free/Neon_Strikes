
<h1>Location Creator</h1>

<%if @location.errors.any? %>
<h4 style="color: #5DADE2">Errors</h4>

    <% @location.errors.full_messages.each do |message| %>
    <li> <%=message%> </li> 
    <% end %>
<% end %>
<br>


<%= form_for(@location) do |f| %>
    <%= f.label :Name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :'Attack Boost' %>
    <br>
    <%= f.text_field :location_type %>
    <br>
    <br>
    <%= f.submit%>
    <% end %>


    <br>
    <%= link_to "Go Back", locations_path %>