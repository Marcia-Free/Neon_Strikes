<body id="player_form">

<ul>
  <li><a href="/battles">Main Menu</a></li>
  <li><a href="/enemies">Go Back</a></li>
</ul>

<h2>Enemy Creator</h2>

<%if @enemy.errors.any? %>
<h4 style="color: #5DADE2">Errors</h4>

    <% @enemy.errors.full_messages.each do |message| %>
    <li> <%=message%> </li> 
    <% end %>
<% end %>
<br>


<%= form_for(@enemy) do |f| %>
    <%= f.label :Name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.submit%>
    <% end %>

</body>